{
  "name": "mirth-node-runtime",
  "version": "1.0.0",
  "description": "Node.js TypeScript runtime for Mirth Connect",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "compile-channel": "ts-node --esm src/tools/compile-channel.ts",
    "deploy-channel": "ts-node --esm src/tools/deploy-channel.ts"
  },
  "keywords": [
    "mirth",
    "hl7",
    "healthcare",
    "integration"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "hl7-standard": "^1.0.4",
    "jest": "^29.7.0",
    "net": "^1.0.2",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "xml2js": "^0.6.2"
  },
  "dependencies": {
    "fast-xml-parser": "^5.0.8",
    "xml-js": "^1.6.11"
  }
}
